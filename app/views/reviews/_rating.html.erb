<% if product.errors.any? %>
  <ul class="errors">
    <% product.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: Review.new, url: product_reviews_path(product), class: 'review-form-container' do |f| %>
  <div>
    <%= f.select :rating, ["rating", 1, 2, 3, 4, 5] %>
  </div>
  <div>
    <%= f.label :Leave_a_review %>
    <%= f.text_area :description %>
  </div>
  <%= f.submit action_name, class: "product-button" %>
<% end %>