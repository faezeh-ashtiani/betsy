
<div class="form"> 
  <%= form_with model: @product do |f| %>
    <div class="form-group">
      <%= f.label "Name:" %>
      <%= f.text_field :name, placeholder: "#{name}" %>
    </div>
    <div class="form-group">
      <%= f.label "Price:" %>
      <%= f.text_field :price, placeholder: "#{price}"%>
    </div>
    <div class="form-group">
      <%= f.label "Image Url:" %>
      <%= f.text_field :img_url, placeholder: "#{img_url}" %>
    </div>
    <div class="form-group">
      <%= f.label "Description:", placeholder: "#{description}" %>
      <%= f.text_field :description %>
    </div>
    <div class="form-group">
      <%= f.label "Quantity:" %>
      <%= f.text_field :qty, placeholder: "#{qty}" %>
    </div>
    <div ><strong><%= link_to "Create new category", new_category_path,class: "product-button" %></strong> or select one : </div> 
    <div class="form-check">
      <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name) %>
    </div>
 
  
    <%= f.submit "#{action_name} Product", class: "product-button button-style" %>
  <% end %>
</div> 