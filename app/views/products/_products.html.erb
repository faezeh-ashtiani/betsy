

<div class="all-products"> 
  <div class='products-header'>
    <h2><%= list_name %></h2>
    <h4><%= "#{variable.count} products" %></h4>
  </div>
 
    <main class='product-index'> 
      <% variable.each do |product| %>
        <section class="product_square">
          
          <%= image_tag product.img_url, alt: product.description %>
          
            <p><%= link_to product.name, product_path(product.id) %></p>
            <p>$<%= sprintf('%.2f', product.price) %></p>
         
         
        </section>
     <% end %>
      
    </main> 
  
</div>
